# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Chunking Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Retrieval Configuration
TOP_K_RESULTS=3
SEARCH_MODE=hybrid  # "vector" or "hybrid"
RRF_K=60  # Reciprocal Rank Fusion parameter (default: 60)

# Application Settings
APP_NAME=RAG PDF System
APP_VERSION=2.0.0

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_EMBEDDINGS=3600  # 1 hour
CACHE_TTL_WIKIPEDIA=86400  # 24 hours
CACHE_TTL_SEARCH=1800  # 30 minutes

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=rag_user
MYSQL_PASSWORD=ragpassword
MYSQL_DATABASE=rag_metadata
MYSQL_ROOT_PASSWORD=rootpassword

# Monitoring & Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
METRICS_PORT=8000

# Resilience Patterns
OLLAMA_TIMEOUT=30  # seconds
OLLAMA_RETRY_ATTEMPTS=3
CIRCUIT_BREAKER_THRESHOLD=5  # failures before opening
CIRCUIT_BREAKER_TIMEOUT=60  # seconds before retry
